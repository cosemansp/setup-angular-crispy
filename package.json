{
  "name": "xerius",
  "version": "0.2.1",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "serve": "ng serve --hmr --open",
    "serve:simple": "ng serve",
    "build": "npm run bumpVersion && ng build",
    "build:prod": "npm run bumpVersion && ng build --target=production --environment=prod --output-path=dist-prod",
    "build:prod:sourcemaps": "npm run build:prod -- --sourcemap",
    "test": "jest --watch",
    "test:ci": "jest",
    "lint": "ng lint --type-check --format=stylish",
    "cleanup": "rimraf dist* yarn-error.log",
    "explore": "source-map-explorer",
    "bumpVersion": "node ./scripts/setVersion.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.0.0",
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "bootstrap-sass": "^3.3.7",
    "core-js": "^2.4.1",
    "font-awesome": "^4.7.0",
    "js-logger": "^1.3.0",
    "ng2-toastr": "^4.1.0",
    "rxjs": "^5.1.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "1.1.0",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/language-service": "^4.0.0",
    "@types/node": "^7.0.29",
    "cheerio": "^1.0.0-rc.1",
    "codelyzer": "~3.0.1",
    "jasmine-expect": "^3.7.0",
    "jest": "^20.0.4",
    "jest-preset-angular": "^2.0.2",
    "ngx-http-test": "^1.3.1",
    "pretty": "^2.0.0",
    "replace-in-file": "^2.5.0",
    "rimraf": "^2.6.1",
    "source-map-explorer": "^1.3.3",
    "ts-node": "~3.0.4",
    "tslint": "~5.3.2",
    "typescript": "~2.3.3"
  },
  "jest": {
    "verbose": false,
    "preset": "jest-preset-angular",
    "unmockedModulePathPatterns": [
      "jasmine-matchers"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupJest.ts",
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx|ngx-http-test)"
    ]
  }
}
